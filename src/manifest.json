{
  "manifest_version": 3,
  "name": "O'Reilly Extension",
  "version": "1.0.0",
  "description": "Chrome extension for O'Reilly",
  "permissions": [
    "debugger",
    "storage",
    "tabs",
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://*.oreilly.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.oreilly.com/*"],
      "js": ["content/content.js"]
    }
  ]
}
